    <li><a href="#files">Files</a></li>
</ul>
 
<div class="tab-content">
    <div class="tab-pane active" id="languages">
        <div class="right_buttons">
            <%= link_to "Add new language", new_translation_path, :class => "btn" %>
        </div>
        <table class="table table-languages">
            <thead>
                <tr>
                    <th>Language</th>
                    <th>Progress</th>
