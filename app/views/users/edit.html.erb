<!-- Header -->
<div class="page-header page-header-projects">
	<div class="right-buttons-header">
        <% if is_site_admin %>
    	   <button type="button" data-toggle="modal" data-target="#modal_confirm_delete" class="btn btn-danger">Delete</button>
        <% end %>
	</div>
    <h1><%= @user.full_name %> <small>Edit user</small></h1>
</div>

<% if is_site_admin %>

    <!-- Breadcrumbs -->
    <ul class="breadcrumb">
        <li><%= link_to "Users", users_path %> <span class="divider">/</span></li>
        <li class="active">Edit user</li>
    </ul>

<% end %>

<%= render :partial => "user_edit", :locals => { 
    :user => @user,
    :languages => @languages } %>

<% if is_site_admin %>
    <%= render :partial => "common/simple_modal", :locals => {
            :modal_id => "modal_confirm_delete",
            :title => "Confirm deletion",
            :message => "Are you sure that you want to delete this user? This action can't be undone.",
            :button => link_to("Confirm deletion", @user, :method => :delete, :class => "btn btn-danger")
        } %>
<% end %>