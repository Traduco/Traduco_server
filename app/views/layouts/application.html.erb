<!DOCTYPE html>
<html>
<head>
    <title>Traduco</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/">Traduco</a>

                <div class="nav-collapse collapse">
                    <% if current_user %>
                        <ul class="nav">
                            <li<%= raw ' class="active"' if @tab == :projects %>>
                                <%= link_to "Projects", projects_path %>
                            </li>
                            <% if current_user.is_site_admin %>
                                <li<%= raw ' class="active"' if @tab == :users %>>
                                    <%= link_to "Users", users_path %>
                                </li>
                            <% end %>
                        </ul>
                    <% end %>

                    <ul class="nav pull-right">
                        <% if current_user %>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <%= current_user.full_name %>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <%= link_to "My account", edit_user_path(current_user) %>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <%= link_to "Logout", logout_path, :tabindex => "-1" %>
                                    </li>
                                </ul>
                            </li>
                        <% else %>
                            <li<%= raw ' class="active"' if @tab == :login %>>
                                <%= link_to "Login", login_path %>
                            </li>
                        <% end %>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">

        <div class="maindiv">

            <%= yield %>

        </div>

        <hr>

        <footer>
            <p>Klaim &copy; 2012</p>
        </footer>

    </div> <!-- /container -->

</body>
</html>
